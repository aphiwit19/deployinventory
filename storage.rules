rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // อนุญาตให้ผู้ใช้ที่ล็อกอินอัปโหลด/ดาวน์โหลดไฟล์ได้
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // หรือจำกัดเฉพาะ folder ที่ต้องการ
    match /product-images/{imageId} {
      allow read, write: if request.auth != null;
    }
  }
}
